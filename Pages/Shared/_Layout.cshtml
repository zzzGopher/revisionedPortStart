<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>

    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

    <title>@ViewData["Title"] - uTestAndForms</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>

    <link rel="stylesheet" href="~/uTestAndForms.styles.css" asp-append-version="true"/>

    <link rel="stylesheet" href="~/css/Layout/layout.css" asp-append-version="true"/>

    <link rel="stylesheet" href="~/css/Index/Index.css"/>


    <link rel="preconnect" href="https://fonts.googleapis.com">

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

    <link href="https://fonts.googleapis.com/css2?family=Megrim&family=Rubik:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

</head>
<body>
<header>
    <div class="container navbar navbar-styles">

        <div class="nav-items nav-items-styles">
            <div>
                <a class="dylan-anchor" asp-page="/Index">Dylan</a>
            </div>
            <icon id="burger">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 14 14" fill="none">
                    <path d="M0 14H14V11.6667H0V14ZM0 8.16667H14V5.83333H0V8.16667ZM0 0V2.33333H14V0H0Z" fill="white"/>
                </svg>
            </icon>

            <div id="nav-menu" data-nav-state="false" class="navbar-menu navbar-menu-style">
                <ul>
                    <li>
                        <a asp-page="/Index">Home</a>
                    </li>
                    <li>
                        <a asp-page="/MockDbExample">MockDB</a>
                    </li>
                    <li>
                        <a asp-page="/Blogs/Index">Blogs</a>
                    </li>
                    <li>three</li>
                    <li>four</li>
                </ul>
            </div>
        </div>

    </div>
</header>

<partial name="_NavPartial"/>

<div class="container index-container col-md-8 col-xxl-12 ">
    <main role="main" class="pb-3 ">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted">
    <div class="container">
        &copy; 2023 - uTestAndForms - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)

</body>

<script type="text/javascript">
      const burger = document.getElementById("burger");
      const navMenu = document.getElementById("nav-menu")

      burger.addEventListener("click",function(){

          navMenu.getAttribute("data-nav-state") === "false" ? navMenu.setAttribute("data-nav-state","true"): navMenu.setAttribute("data-nav-state","false");


          console.log(navMenu.getAttribute("data-nav-state"))
      });


</script>

</html>