@page
@model Index

@{
    Layout = Layout;
}

<div class="container">
    <form asp-page-handler="AddUsers" class="row w-25 m-auto text-white">

        <label class="form-label" asp-for="NewUsers.Name">Name:</label>

        <input asp-for="NewUsers.Name" type="text">

        <label asp-for="NewUsers.City">City:</label>

        <input asp-for="NewUsers.City" type="text">

        <label asp-for="NewUsers.State">State:</label>

        <input asp-for="NewUsers.State" type="text">

        <input class="mt-3 btn btn-success" type="submit">

    </form>
    <span class="wee" asp-validation-for="NewUsers.Name"></span>
</div>

<style>
    label{
    font-weight: bolder;
    }
    input{
    border: 1px solid;
    border-radius: 2px;
    }

    .wee{
    color: white;
    background-color: red;
    height: 45px
    ;
    width: 45px;
}
</style>

@section Scripts{
    @{
        await Html.RenderPartialAsync("Shared/_ValidationScriptsPartial");
    }
}